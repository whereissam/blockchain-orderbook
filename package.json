{
  "name": "blockchain-orderbook",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:staged": "vitest related --run",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "lint:check": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,css,md}\"",
    "type-check": "tsc --noEmit",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "analyze": "npx vite-bundle-analyzer",
    "hardhat:compile": "hardhat compile",
    "hardhat:test": "hardhat test",
    "hardhat:node": "hardhat node",
    "deploy:local": "hardhat run scripts/deploy.cjs --network localhost",
    "deploy:goerli": "hardhat run scripts/deploy.cjs --network goerli",
    "deploy:sepolia": "hardhat run scripts/deploy.cjs --network sepolia",
    "deploy:mainnet": "hardhat run scripts/deploy.cjs --network mainnet",
    "seed:local": "hardhat run scripts/seed-exchange.cjs --network localhost",
    "seed:goerli": "hardhat run scripts/seed-exchange.cjs --network goerli",
    "seed:sepolia": "hardhat run scripts/seed-exchange.cjs --network sepolia",
    "verify:goerli": "hardhat verify --network goerli",
    "verify:sepolia": "hardhat verify --network sepolia",
    "verify:mainnet": "hardhat verify --network mainnet"
  },
  "dependencies": {
    "@reown/appkit": "^1.6.0",
    "@reown/appkit-adapter-wagmi": "^1.6.0",
    "@tanstack/react-query": "^5.59.0",
    "apexcharts": "^4.1.0",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.13",
    "ethers": "^6.13.3",
    "gsap": "^3.12.5",
    "i18next": "^25.3.0",
    "i18next-browser-languagedetector": "^8.0.0",
    "i18next-http-backend": "^3.0.2",
    "immer": "^10.1.1",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "react": "^19.0.0",
    "react-apexcharts": "^1.5.0",
    "react-blockies": "^1.4.1",
    "react-dom": "^19.0.0",
    "react-hot-toast": "^2.4.1",
    "react-i18next": "^15.1.1",
    "react-router-dom": "^7.6.3",
    "tailwind-merge": "^3.3.1",
    "viem": "^2.21.19",
    "wagmi": "^2.12.17",
    "zustand": "^5.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/js": "^9.12.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.8",
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.12",
    "@nomicfoundation/hardhat-toolbox": "^6.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.11",
    "@tailwindcss/vite": "^4.0.0-alpha.30",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/lodash": "^4.17.10",
    "@types/node": "^24.0.10",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.2",
    "@vitejs/plugin-react-swc": "^3.7.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.20",
    "chai": "^4.4.1",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "dotenv": "^17.0.1",
    "eslint": "^9.12.0",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "eslint-plugin-react": "^7.37.1",
    "eslint-plugin-react-hooks": "^5.0.0",
    "globals": "^16.3.0",
    "hardhat": "^2.22.12",
    "husky": "^9.1.6",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.2",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "tailwindcss": "^4.1.11",
    "typechain": "^8.3.2",
    "typescript": "^5.6.3",
    "vite": "^7.0.1",
    "vitest": "^3.2.4"
  },
  "overrides": {
    "chai": "^4.4.1"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "vitest related --run --passWithNoTests"
    ],
    "src/**/*.{css,scss,md}": [
      "prettier --write"
    ],
    "contracts/**/*.sol": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all",
      "not ie <= 11"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
